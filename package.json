{
  "name": "react-bulma-components",
  "version": "1.0.0",
  "description": "react components",
  "main": "src/index.js",
  "scripts": {
    "build": "npm run build:es2015 && npm run build:es2015modules && npm run build:copy-files && npm run build:umd:dev && npm run build:umd:prod",
    "build:es2015": "cross-env NODE_ENV=production babel ./src --ignore *.spec.js --out-dir ./build",
    "build:umd:prod": "cross-env NODE_ENV=production webpack --config scripts/umd.webpack.config.js",
    "prettier": "find . -name \"*.js\" | grep -v -f .eslintignore | xargs prettier --write --single-quote --trailing-comma all --print-width 100",
    "clean": "rimraf dist coverage stats.json",
    "lint": "eslint -c ./.eslintrc.js --format node_modules/eslint-friendly-formatter --ignore-pattern *.spec.js --ignore-pattern 'node_modules/' src/ || exit 0 && echo \"eslint: no lint errors\"",
    "prebuild": "npm run clean:build",
    "size": "size-limit 120KB build/index.js",
    "size:why": "size-limit --why build/index.js",
    "start": "babel-node ./build/dev.js",
    "test": "npm run lint && npm run flow && npm run test:unit",
    "test:unit": "cross-env NODE_ENV=test jest || exit 0",
    "test:watch": "cross-env NODE_ENV=test jest --watchAll",
    "test:coverage": "cross-env NODE_ENV=test jest --coverage || exit 0",
    "argos": "argos upload test/regressions/screenshots/chrome --token $ARGOS_TOKEN || true",
    "release": "np --no-publish --any-branch",
    "postrelease": "yarn docs:deploy && npm publish build --tag next",
    "precommit": "lint-staged"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/blackLearning/react-bulma-components.git"
  },
  "bugs": {
    "url": "https://github.com/blackLearning/react-bulma-components/issues"
  },
  "homepage": "https://github.com/blackLearning/react-bulma-components#readme",
  "keywords": [
    "react",
    "react-bulma-components"
  ],
  "author": "blackLearning",
  "license": "MIT",
  "jest": {
    "collectCoverageFrom": [
      "src/**/*.{js,jsx}",
      "!src/**/*.spec.{js,jsx}"
    ],
    "coverageThreshold": {
      "global": {
        "statements": 60,
        "branches": 60,
        "functions": 60,
        "lines": 60
      }
    },
    "moduleDirectories": [
      "node_modules",
      "src"
    ],
    "moduleFileExtensions": [
      "web.js",
      "js",
      "jsx"
    ],
    "transform": {
      "^.+\\.(js|jsx)$": "<rootDir>/node_modules/babel-jest",
      "^.+\\.css$": "<rootDir>/build/jest/cssTransform.js",
      "^(?!.*\\.(js|jsx|css|json)$)": "<rootDir>/build/jest/fileTransform.js"
    },
    "moduleNameMapper": {
      ".*\\.(css|less|styl|scss|sass)$": "<rootDir>/__mocks__/styleMock.js",
      ".*\\.(jpg|jpeg|png|gif|eot|otf|webp|svg|ttf|woff|woff2|mp4|webm|wav|mp3|m4a|aac|oga)$": "<rootDir>/__mocks__/fileMock.js"
    },
    "transformIgnorePatterns": [
      "[/\\\\]node_modules[/\\\\].+\\.(js|jsx)$"
    ],
    "testRegex": "src/.*\\.spec\\.js$"
  },
  "peerDependencies": {
    "react": "^15.6.1 || ^16.0.0-beta.5",
    "react-dom": "^15.6.1 || ^16.0.0-beta.5",
    "bulma": "^0.5.1"
  },
  "dependencies": {
    "bulma": "^0.5.1",
    "react": "^15.6.1",
    "react-dom": "^15.6.1"
  },
  "lint-staged": {
    "src/**/*.js": "eslint -c ./.eslintrc.js --format node_modules/eslint-friendly-formatter --ignore-pattern *.spec.js --fix"
  },
  "devDependencies": {
    "babel-cli": "^6.26.0",
    "babel-eslint": "^7.2.3",
    "babel-plugin-transform-class-properties": "^6.24.1",
    "babel-plugin-transform-decorators-legacy": "^1.3.4",
    "babel-preset-es2015": "^6.24.1",
    "babel-preset-react": "^6.24.1",
    "babel-preset-stage-3": "^6.24.1",
    "cross-env": "^5.0.5",
    "enzyme": "^2.9.1",
    "eslint": "^4.5.0",
    "eslint-config-airbnb": "^15.1.0",
    "eslint-friendly-formatter": "^3.0.0",
    "eslint-plugin-import": "^2.7.0",
    "eslint-plugin-jsx-a11y": "^5.1.1",
    "eslint-plugin-react": "^7.3.0",
    "husky": "^0.14.3",
    "jest": "^20.0.4",
    "lint-staged": "^4.0.4",
    "recompose": "^0.25.0"
  }
}
